<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/customview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.swensun.func.customview.CustomViewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <com.swensun.func.customview.view.BaguaView
                android:id="@+id/bagua_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5" />

        <com.swensun.func.customview.view.TaijiView
                android:id="@+id/taiji_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5" />

        <com.swensun.func.customview.view.FoView
                android:id="@+id/fo_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bagua_view"
                app:layout_constraintWidth_percent="0.5" />

        <com.swensun.func.customview.view.LoadingView
                android:id="@+id/loading_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taiji_view"
                app:layout_constraintWidth_percent="0.5" />

        <com.swensun.func.customview.view.SkeletonView
                android:id="@+id/skeleton_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loading_view"
                app:layout_constraintWidth_percent="0.5" />

        <com.swensun.func.customview.view.GoogleView
                android:id="@+id/google_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loading_view"
                app:layout_constraintWidth_percent="0.5" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        <com.swensun.func.customview.bubbledialog.BubbleLayout
                android:id="@+id/bubble_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/float_btn"
                app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
